<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Distributed Shop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body class="bg-light p-4">

    <div class="d-flex justify-content-between align-items-center mb-5 container bg-white p-3 shadow-sm rounded">
        <h2 class="m-0 text-primary"><i class="fa-solid fa-server"></i> Distributed Shop</h2>
        <div>
            <form action="/seed" method="POST" class="d-inline">
                <button class="btn btn-outline-warning btn-sm me-2">Reset DB</button>
            </form>

            <a href="/cart" class="btn btn-primary position-relative">
                <i class="fa-solid fa-cart-shopping"></i> View Cart
                <% if (cartCount> 0) { %>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        <%= cartCount %>
                    </span>
                    <% } %>
            </a>
        </div>
    </div>

    <div class="container">
        <% if (query.error) { %>
            <div class="alert alert-danger text-center">
                <%= query.error %>
            </div>
            <% } %>

                <div class="row">
                    <% products.forEach(p=> { %>
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 shadow-sm border-0">
                                <div class="card-body text-center">
                                    <div style="font-size: 60px;" class="mb-3">
                                        <%= p.image %>
                                    </div>
                                    <h5 class="card-title">
                                        <%= p.name %>
                                    </h5>
                                    <p class="card-text text-success fw-bold fs-4">$<%= p.price %>
                                    </p>
                                    <p class="text-muted small">Stock: <%= p.stock %>
                                    </p>

                                    <% if (p.stock> 0) { %>
                                        <form action="/cart/add" method="POST">
                                            <input type="hidden" name="productId" value="<%= p._id %>">
                                            <input type="hidden" name="name" value="<%= p.name %>">
                                            <input type="hidden" name="price" value="<%= p.price %>">
                                            <button class="btn btn-outline-primary w-100">
                                                <i class="fa-solid fa-plus"></i> Add to Cart
                                            </button>
                                        </form>
                                        <% } else { %>
                                            <button class="btn btn-secondary w-100" disabled>Sold Out</button>
                                            <% } %>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
    </div>

    <div class="toast-container position-fixed bottom-0 end-0 p-3">

        <div id="toast-added" class="toast align-items-center text-bg-primary border-0" role="alert"
            aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="fa-solid fa-check-circle me-2"></i> Item added to cart!
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>

        <div id="toast-success" class="toast align-items-center text-bg-success border-0" role="alert"
            aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="fa-solid fa-gift me-2"></i> Order placed successfully!
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Check URL parameters on page load
        const params = new URLSearchParams(window.location.search);

        if (params.get('action') === 'added') {
            const toast = new bootstrap.Toast(document.getElementById('toast-added'));
            toast.show();
        }

        if (params.get('status') === 'success') {
            const toast = new bootstrap.Toast(document.getElementById('toast-success'));
            toast.show();
        }

        // Clean URL (Remove query params so toast doesn't show again on refresh)
        if (params.has('action') || params.has('status')) {
            const newUrl = window.location.protocol + "//" + window.location.host + window.location.pathname;
            window.history.replaceState({ path: newUrl }, '', newUrl);
        }
    </script>
</body>

</html>